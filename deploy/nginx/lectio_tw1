server {
    listen 80;
    listen 443 ssl;
    server_name lectio.tw1.ru www.lectio.tw1.ru;

    if ($scheme = http) { return 301 https://$host$request_uri; }

    ssl_certificate /etc/letsencrypt/live/lectio.tw1.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/lectio.tw1.ru/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options DENY always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy strict-origin-when-cross-origin always;

    client_max_body_size 2G;

    # Zoom webhook
    location /schedule/webhook/zoom/ {
        proxy_pass http://127.0.0.1:8000/schedule/webhook/zoom/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_request_buffering off;
    }

    # API routes
    location ^~ /api/storage/ {
        rewrite ^/api/storage/(.*)$ /schedule/api/storage/$1 break;
        proxy_pass http://127.0.0.1:8000/schedule/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Video streaming endpoint - special config for large files
    location ~ ^/schedule/api/recordings/[0-9]+/stream/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Critical for streaming - disable buffering
        proxy_buffering off;
        proxy_request_buffering off;

        # Large file timeouts (10 minutes for 500MB+ files)
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;
        proxy_connect_timeout 60s;

        # Don't try to intercept errors
        proxy_intercept_errors off;
    }

    location /schedule/api/ {
        proxy_pass http://127.0.0.1:8000/schedule/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # Homework files: cache at nginx (disk) to reduce load on Django/GDrive
    location ^~ /api/homework/file/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;

        proxy_cache lectio_homework_cache;
        proxy_cache_key "$scheme$proxy_host$uri";
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 301 302 30d;
        proxy_cache_valid 404 1m;
        proxy_cache_lock on;
        proxy_cache_lock_timeout 10s;
        proxy_cache_use_stale error timeout invalid_header updating http_500 http_502 http_503 http_504;

        add_header X-Cache-Status $upstream_cache_status always;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8000/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    location /accounts/ {
        proxy_pass http://127.0.0.1:8000/accounts/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /ws/ {
        proxy_pass http://127.0.0.1:8000/ws/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    # Static
    location ^~ /admin/static/ {
        alias /var/www/teaching_panel/frontend/build/static/;
        expires 0;
        add_header Cache-Control "public, must-revalidate, max-age=0";
    }

    location = /admin {
        root /var/www/teaching_panel/frontend/build;
        try_files /index.html =404;
    }

    location ^~ /admin/ {
        root /var/www/teaching_panel/frontend/build;
        try_files $uri /index.html =404;
    }

    location /dj-admin {
        proxy_pass http://127.0.0.1:8000/admin;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /django-static/ {
        alias /var/www/teaching_panel/teaching_panel/staticfiles/;
    }

    location /media/ {
        alias /var/www/teaching_panel/teaching_panel/media/;
    }

    location ^~ /static/admin/ {
        alias /var/www/teaching_panel/teaching_panel/staticfiles/admin/;
        expires 30d;
        add_header Cache-Control "public";
    }

    location ^~ /static/rest_framework/ {
        alias /var/www/teaching_panel/teaching_panel/staticfiles/rest_framework/;
        expires 30d;
        add_header Cache-Control "public";
    }

    location /static/ {
        alias /var/www/teaching_panel/frontend/build/static/;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
    }

    # React SPA - fixed: no infinite rewrite cycle
    location / {
        root /var/www/teaching_panel/frontend/build;
        try_files $uri $uri/ /index.html =404;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }
}
