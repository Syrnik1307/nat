[Unit]
Description=Teaching Panel Celery Beat Scheduler
After=network.target redis.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/teaching_panel/teaching_panel
Environment="PATH=/var/www/teaching_panel/venv/bin"
EnvironmentFile=/var/www/teaching_panel/teaching_panel/.env
ExecStart=/var/www/teaching_panel/venv/bin/celery -A teaching_panel beat \
    --loglevel=info \
    --scheduler django_celery_beat.schedulers:DatabaseScheduler \
    --logfile=/var/log/teaching_panel/celery_beat.log \
    --pidfile=/var/run/teaching_panel/celery_beat.pid

ExecStop=/bin/kill -s TERM $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
