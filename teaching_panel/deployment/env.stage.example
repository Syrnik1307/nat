# Stage environment template for subdomain deployment
# Copy to teaching_panel/.env and fill sensitive values before restart

SECRET_KEY=
DEBUG=False

# Stage host settings
ALLOWED_HOSTS=stage.yourdomain.com,.yourdomain.com,localhost,127.0.0.1
SERVER_HOST=stage.yourdomain.com
CORS_WILDCARD_DOMAIN=yourdomain.com
CORS_EXTRA=https://stage.yourdomain.com
FRONTEND_URL=https://stage.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://stage.yourdomain.com

# Database (keep same as production only if intentional)
DATABASE_URL=postgresql://username:password@localhost:5432/teaching_panel

# Redis/Celery
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Olga stage demo seed params
OLGA_TENANT_SLUG=olga-stage
BASE_DOMAIN=yourdomain.com
OLGA_OWNER_EMAIL=olga.stage@yourdomain.com
OLGA_OWNER_PASSWORD=OlgaStage2026!
OLGA_BUYER_EMAIL=buyer.stage@yourdomain.com
OLGA_BUYER_PASSWORD=BuyerStage2026!
FRONTEND_BASE_URL=https://stage.yourdomain.com
