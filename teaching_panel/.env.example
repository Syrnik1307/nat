# ========================================
# CRITICAL: COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# Never commit .env to git - keep your secrets safe!
# ========================================

# Django Settings
# Generate new SECRET_KEY with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-me

# Development: True, Production: False (CRITICAL!)
DEBUG=True

# Production: Add your domain here (comma-separated)
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# ========================================
# Zoom API Credentials (Server-to-Server OAuth)
# Get them from: https://marketplace.zoom.us/
# ========================================
ZOOM_ACCOUNT_ID=your-zoom-account-id
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_WEBHOOK_SECRET_TOKEN=your-webhook-secret-token

# Legacy JWT credentials (optional, if still using old API)
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# ========================================
# reCAPTCHA v3 Credentials
# Get them from: https://www.google.com/recaptcha/admin
# ========================================
RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key

# ========================================
# Database Configuration
# ========================================
# Development: SQLite (default)
# Production: PostgreSQL or MySQL recommended
# DATABASE_URL=postgresql://user:password@localhost:5432/teaching_panel
# DATABASE_URL=mysql://user:password@localhost:3306/teaching_panel

# ========================================
# Celery & Redis
# ========================================
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
USE_IN_MEMORY_CELERY=0

# ========================================
# Email Configuration
# ========================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@teachingpanel.com

# Production SMTP (uncomment and configure)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ========================================
# SMS.ru Configuration
# Get API ID from: https://sms.ru/api
# ========================================
SMSRU_API_ID=
SMSRU_FROM_NAME=Teaching Panel

# ========================================
# Azure Cosmos DB (Optional)
# ========================================
COSMOS_DB_ENABLED=0
# COSMOS_DB_URL=https://localhost:8081/
# COSMOS_DB_KEY=your-cosmos-key
# COSMOS_DB_DATABASE=teaching_panel

# ========================================
# Frontend Configuration
# ========================================
FRONTEND_URL=http://localhost:3000
# Production: укажите ваш домен
# FRONTEND_URL=https://your-domain.com

# Server host для CORS (IP или домен сервера)
SERVER_HOST=72.56.81.163
# Production: укажите ваш IP или домен
# SERVER_HOST=your-domain.com

# Дополнительные CORS origins (через запятую, опционально)
# CORS_EXTRA=https://app.your-domain.com,https://admin.your-domain.com

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://127.0.0.1:6379/1

# ========================================
# Sentry Error Monitoring (Optional)
# Get DSN from: https://sentry.io
# ========================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production

# ========================================
# Production Security Settings (Enable for production!)
# ========================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ========================================
# Telegram Bot Configuration
# ========================================
# Основной бот для уведомлений пользователям (напоминания об уроках, ДЗ и т.д.)
# Получить токен: @BotFather в Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=

# Отдельный бот для уведомлений о платежах (только для админа)
# Позволяет разделить каналы уведомлений
TELEGRAM_PAYMENTS_BOT_TOKEN=

# Chat ID администратора для получения уведомлений о платежах
# Получить свой chat_id: напишите @userinfobot в Telegram
ADMIN_PAYMENT_TELEGRAM_CHAT_ID=
