# Log Agent v3 â€” Environment Variables
# Copy to /etc/log_agent.env and fill in values

# Google Gemini API (required for AI analysis)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# Telegram (required)
LOG_AGENT_TG_TOKEN=your-bot-token-from-botfather
LOG_AGENT_TG_CHAT=your-chat-id

# Optional: extra chat IDs allowed to send commands (comma-separated)
# LOG_AGENT_ALLOWED_CHATS=123456,789012

# Scan interval (seconds, default 60)
LOG_AGENT_INTERVAL=60

# Error dedup window (minutes, default 5)
LOG_AGENT_DEDUP_MINUTES=5

# Spike detection
LOG_AGENT_SPIKE_THRESHOLD=10
LOG_AGENT_SPIKE_WINDOW=300
