# ======================
# Teaching Panel
# Production .env Template
# ======================
# Copy this to .env.production and fill in production values
# NEVER commit .env.production to git!

# ======================
# Django Core Settings
# ======================
SECRET_KEY=
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ======================
# Database (PostgreSQL)
# ======================
DATABASE_URL=postgresql://username:password@localhost:5432/teaching_panel

# ======================
# Email (SMTP)
# ======================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=Teaching Panel <noreply@yourdomain.com>

# ======================
# Redis & Celery
# ======================
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# ======================
# Zoom API
# ======================
ZOOM_ACCOUNT_ID=
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_WEBHOOK_SECRET_TOKEN=

# ======================
# reCAPTCHA v3
# ======================
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_PRIVATE_KEY=
RECAPTCHA_ENABLED=true
RECAPTCHA_REQUIRED_SCORE=0.5

# ======================
# SMS.ru (Optional)
# ======================
SMSRU_API_ID=
SMSRU_FROM_NAME=Teaching Panel

# ======================
# Security Settings
# ======================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ======================
# Frontend
# ======================
FRONTEND_URL=https://yourdomain.com

# ======================
# CSRF Trusted Origins
# ======================
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ======================
# Azure Cosmos DB (Optional)
# ======================
COSMOS_DB_ENABLED=0
# COSMOS_DB_URL=
# COSMOS_DB_KEY=
# COSMOS_DB_DATABASE=teaching_panel
